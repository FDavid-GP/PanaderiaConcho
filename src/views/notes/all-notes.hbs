<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
    <h4 class="card-title d-flex justify-content-between align-items-center">
         Pan: {{ title }} 
	<form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
	<a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          <input type="hidden" name="_method" value="DELETE">
       <button id="eliminar" type="submit" class="btn btn-danger btn-block btn-sm"><i id="tra" class="fa fa-trash" aria-hidden="true"></i></button>
        </form>
        </h4>
<center><img src="{{ imagen }}"></center>
        <p>Precio ${{ precio }} c/u</p>
        <!-- DELETE REQUEST -->
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto" id="pr">
    <div class="card-body">
      <h1>Hola {{user.name}}</h1>
      <p clsss="lead">No tienes ningun pan.</p>
      <a href="/notes/add" class="btn btn-success btn-block">Agregar pan</a>
    </div>
  </div>
  {{/each}}
</div>
